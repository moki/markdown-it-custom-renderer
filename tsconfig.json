{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "moduleResolution":"node",
    "skipLibCheck": true,
    "baseUrl": "src/",
    "rootDir": "src/",
    "outDir": "lib/"
  },
  "include": [
    "src/"
  ],
  "paths": {
      "src/*": ["src/*"],
      "__tests__/*": ["__tests__/*"]
  },
  "exclude": ["src/playground.ts", "./node_modules"]
}
